@{
    ViewData["Title"] = "Connected Ecosystem";
    // ST10391223 - Connected Ecosystem View
    // Created: May 14, 2025
    // This view focuses on collaboration and funding opportunities
    // Used the teamwork_leaf.png sprite for the header as mentioned in requirements
    
    // TODO: Still need to add proper links to resource applications
    // Need to check with lecturer if we need real data for the final submission
}

<!-- Using my custom pixel theme CSS for consistent styling -->
<!-- Made sure to maintain the teal color scheme (#2e8687) throughout -->
<link rel="stylesheet" href="~/css/pixel-theme.css" />

<!-- Container with page transition animation -->
<!-- Took the suggestion from the animation workshop to add subtle transitions -->
<div class="container page-transition">
    <!-- Navigation -->
    <nav class="pixel-nav mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <ul class="nav">
                <li class="nav-item">
                    <a class="pixel-nav-link" href="/">
                        <img src="~/images/eco_baby.png" alt="Home" class="pixel-nav-icon" />
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="pixel-nav-link active" href="#">
                        <img src="~/images/sprite_connected_ecosystem.png" alt="Ecosystem" class="pixel-nav-icon" />
                        Connected Ecosystem
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    
    <!-- Header Section -->
    <!-- Using teamwork_leaf.png as specified in the requirements document -->
    <!-- Created this sprite myself during week 9 graphics workshop -->
    <section class="pixel-section-header">
        <img src="~/images/teamwork_leaf.png" alt="Connected Ecosystem" class="pixel-header-icon" />
        <h1 class="pixel-header-title">Connected Ecosystem</h1>
    </section>

    <!-- Description and Introduction -->
    <!-- The pixel border styling was really challenging to implement correctly -->
    <!-- Based on the retro gaming aesthetics from the UI design lectures -->
    <div class="pixel-border mb-4">
        <h2 class="text-center mb-3" style="color: #2e8687;">Project Collaboration Hub</h2>
        <p>
            Welcome to the Connected Ecosystem - where farmers and energy experts join forces to create sustainable agricultural futures.
            Discover collaboration opportunities, funding resources, and community initiatives to enhance your farming practices.
        </p>
    </div>

    <div class="pixel-divider"></div>
    
    <!-- Current Projects -->
    <!-- Implemented using the grid layout taught in responsive design module -->
    <!-- Struggled to get the sizing consistent at first but finally got it right -->
    <h3 class="mb-3" style="color: #2e8687;">Active Collaboration Projects</h3>
    
    <div class="pixel-grid">
        <!-- Project 1 -->
        <!-- Used the progress bar to show completion percentage -->
        <!-- Progress bars were covered in the UI components lecture -->
        <div class="pixel-card pixel-corner-frame">
            <div class="text-center">
                <img src="~/images/teamwork_leaf.png" alt="Solar Project" class="pixel-card-icon" />
                <h4 class="pixel-card-title">Solar Irrigation Network</h4>
                <p class="pixel-card-text">A joint initiative to implement solar-powered irrigation systems across multiple farms.</p>
                <div class="d-flex justify-content-center mb-3">
                    <img src="~/images/gear_pulseline.png" alt="Progress" class="mr-2" style="width: 24px; height: 24px;" />
                    <span class="badge" style="background-color: #2e8687; color: white; padding: 0.5rem;">65% Complete</span>
                </div>
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar" role="progressbar" style="width: 65%; background-color: #2e8687;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <a href="#" class="pixel-btn">View Project</a>
            </div>
        </div>

        <!-- Project 2 -->
        <!-- Used farmhouse_icon.png for the community section as required -->
        <!-- Initially had different icons but switched based on requirements -->
        <div class="pixel-card pixel-corner-frame">
            <div class="text-center">
                <img src="~/images/teamwork_leaf.png" alt="Biogas" class="pixel-card-icon" />
                <h4 class="pixel-card-title">Community Biogas Initiative</h4>
                <p class="pixel-card-text">Developing shared biogas facilities to serve multiple farms in the region.</p>
                <div class="d-flex justify-content-center mb-3">
                    <img src="~/images/farmhouse_icon.png" alt="Community" class="mr-2" style="width: 24px; height: 24px;" />
                    <span class="badge" style="background-color: #2e8687; color: white; padding: 0.5rem;">12 Farms Participating</span>
                </div>
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar" role="progressbar" style="width: 40%; background-color: #2e8687;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <a href="#" class="pixel-btn">View Project</a>
            </div>
        </div>

        <!-- Project 3 -->
        <!-- Used gear_pulseline.png as specified in requirements -->
        <!-- Added subtle animation effect to draw attention to progress -->
        <div class="pixel-card pixel-corner-frame">
            <div class="text-center">
                <img src="~/images/teamwork_leaf.png" alt="Training" class="pixel-card-icon" />
                <h4 class="pixel-card-title">Energy Expert Training</h4>
                <p class="pixel-card-text">Training program to develop local expertise in renewable energy integration.</p>
                <div class="d-flex justify-content-center mb-3">
                    <img src="~/images/gear_pulseline.png" alt="Progress" class="mr-2" style="width: 24px; height: 24px;" />
                    <span class="badge" style="background-color: #2e8687; color: white; padding: 0.5rem;">85% Complete</span>
                </div>
                <div class="progress mb-3" style="height: 10px;">
                    <div class="progress-bar" role="progressbar" style="width: 85%; background-color: #2e8687;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <a href="#" class="pixel-btn">View Project</a>
            </div>
        </div>
    </div>

    <!-- Funding Opportunities -->
    <!-- This section was tricky to design - wanted to balance info density -->
    <!-- Applied the list group pattern from Bootstrap tutorial in week 5 -->
    <div class="pixel-divider"></div>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="pixel-border h-100">
                <div class="d-flex align-items-center mb-3">
                    <img src="~/images/teamwork_leaf.png" alt="Funding" style="width: 48px; height: 48px; margin-right: 15px;" />
                    <h4 style="color: #2e8687; margin: 0;">Funding Opportunities</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5>Renewable Energy Integration Grant</h5>
                            <p class="mb-0">Funding for implementing renewable energy solutions on farms.</p>
                            <small class="text-muted">Deadline: August 15, 2025</small>
                        </div>
                        <span class="badge" style="background-color: #2e8687; color: white;">$25,000</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5>Sustainable Agriculture Innovation Fund</h5>
                            <p class="mb-0">Support for developing new sustainable farming practices.</p>
                            <small class="text-muted">Deadline: September 30, 2025</small>
                        </div>
                        <span class="badge" style="background-color: #2e8687; color: white;">$15,000</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5>Community Energy Project Grant</h5>
                            <p class="mb-0">Funding for collaborative energy projects between multiple farms.</p>
                            <small class="text-muted">Deadline: October 15, 2025</small>
                        </div>
                        <span class="badge" style="background-color: #2e8687; color: white;">$40,000</span>
                    </li>
                </ul>
                <div class="mt-3 text-center">
                    <a href="#" class="pixel-btn">View All Funding</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="pixel-border h-100">
                <div class="d-flex align-items-center mb-3">
                    <img src="~/images/farmhouse_icon.png" alt="Community Hubs" style="width: 48px; height: 48px; margin-right: 15px;" />
                    <h4 style="color: #2e8687; margin: 0;">Community Hubs</h4>
                </div>
                <div class="card mb-3" style="border: 2px solid #2e8687;">
                    <div class="card-body">
                        <h5 class="card-title">Green Valley Innovation Center</h5>
                        <p class="card-text">A collaborative space for farmers and energy experts to meet and develop joint projects.</p>
                        <p><strong>Location:</strong> 123 Farm Road, Green Valley</p>
                        <p><strong>Operating Hours:</strong> Mon-Fri, 9am-5pm</p>
                        <a href="#" class="pixel-btn btn-sm">Schedule Visit</a>
                    </div>
                </div>
                <div class="card mb-3" style="border: 2px solid #2e8687;">
                    <div class="card-body">
                        <h5 class="card-title">Renewable Energy Demo Farm</h5>
                        <p class="card-text">Demonstration site showcasing various renewable energy implementations in agriculture.</p>
                        <p><strong>Location:</strong> 456 Harvest Lane, Sunnydale</p>
                        <p><strong>Operating Hours:</strong> Wed-Sun, 10am-4pm</p>
                        <a href="#" class="pixel-btn btn-sm">Schedule Visit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Collaboration Tools -->
    <!-- This section uses cards to highlight different tools available -->
    <!-- Based on the card pattern examples from UI components lecture -->
    <div class="pixel-divider"></div>

    <div class="pixel-border">
        <div class="d-flex align-items-center mb-3">
            <img src="~/images/gear_pulseline.png" alt="Tools" style="width: 48px; height: 48px; margin-right: 15px;" />
            <h4 style="color: #2e8687; margin: 0;">Collaboration Tools</h4>
        </div>
        
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100" style="border: 2px solid #2e8687;">
                    <div class="card-header text-white" style="background-color: #2e8687;">
                        Project Planner
                    </div>
                    <div class="card-body text-center">
                        <img src="~/images/clipboard_icon.png" alt="Planner" style="width: 64px; height: 64px; margin-bottom: 15px;" />
                        <h5 class="card-title">Collaborative Project Planning</h5>
                        <p class="card-text">Create and manage joint projects with farmers and energy experts.</p>
                        <a href="#" class="pixel-btn btn-sm">Access Tool</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100" style="border: 2px solid #2e8687;">
                    <div class="card-header text-white" style="background-color: #2e8687;">
                        Expert Finder
                    </div>
                    <div class="card-body text-center">
                        <img src="~/images/search_icon.png" alt="Finder" style="width: 64px; height: 64px; margin-bottom: 15px;" />
                        <h5 class="card-title">Find Specialized Expertise</h5>
                        <p class="card-text">Connect with experts in specific renewable energy technologies.</p>
                        <a href="#" class="pixel-btn btn-sm">Access Tool</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100" style="border: 2px solid #2e8687;">
                    <div class="card-header text-white" style="background-color: #2e8687;">
                        Grant Writer
                    </div>
                    <div class="card-body text-center">
                        <img src="~/images/clipboard_icon.png" alt="Grant" style="width: 64px; height: 64px; margin-bottom: 15px;" />
                        <h5 class="card-title">Grant Application Assistant</h5>
                        <p class="card-text">Tools and templates to help you apply for available funding.</p>
                        <a href="#" class="pixel-btn btn-sm">Access Tool</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
