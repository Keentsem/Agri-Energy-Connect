@{
    ViewData["Title"] = "Educational & Training";
}

<link rel="stylesheet" href="~/css/pixel-theme.css" />

<div class="container page-transition">
    <!-- Navigation -->
    <nav class="pixel-nav mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <ul class="nav">
                <li class="nav-item">
                    <a class="pixel-nav-link" href="/">
                        <img src="~/images/eco_baby.png" alt="Home" class="pixel-nav-icon" />
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="pixel-nav-link active" href="#">
                        <img src="~/images/solar_scroll.png" alt="Educational" class="pixel-nav-icon" />
                        Educational Hub
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    
    <!-- Header Section -->
    <section class="pixel-section-header">
        <img src="~/images/solar_scroll.png" alt="Educational & Training" class="pixel-header-icon" />
        <h1 class="pixel-header-title">Learning Hub</h1>
    </section>

    <!-- Description and Introduction -->
    <div class="pixel-border mb-4">
        <h2 class="text-center mb-3" style="color: #2e8687;">Renewable Energy in Agriculture</h2>
        <p>
            Welcome to our Educational Hub, your center for learning how to integrate renewable energy into farming practices.
            Explore our webinars, workshops, and interactive guides to enhance your knowledge and skills in sustainable agriculture.
        </p>
    </div>

    <div class="pixel-divider"></div>
    
    <!-- Featured Courses -->
    <h3 class="mb-3" style="color: #2e8687;">Featured Learning Resources</h3>
    
    <div class="pixel-grid">
        <!-- Course 1 -->
        <div class="pixel-card pixel-corner-frame">
            <div class="text-center">
                <img src="~/images/solar_scroll.png" alt="Solar Energy" class="pixel-card-icon" />
                <h4 class="pixel-card-title">Solar Energy Fundamentals</h4>
                <p class="pixel-card-text">Learn the basics of solar energy and how to implement solar solutions on your farm.</p>
                <div class="d-flex justify-content-center mb-3">
                    <img src="~/images/binoculars_leaf.png" alt="Exploration" class="mr-2" style="width: 24px; height: 24px;" />
                    <span class="badge" style="background-color: #2e8687; color: white; padding: 0.5rem;">4 Modules</span>
                </div>
                <a href="#" class="pixel-btn">Start Learning</a>
            </div>
        </div>

        <!-- Course 2 -->
        <div class="pixel-card pixel-corner-frame">
            <div class="text-center">
                <img src="~/images/gear_pulseline.png" alt="Integration" class="pixel-card-icon" />
                <h4 class="pixel-card-title">Tech Integration Workshop</h4>
                <p class="pixel-card-text">Step-by-step guide to integrating renewable energy technologies with existing farm equipment.</p>
                <div class="d-flex justify-content-center mb-3">
                    <img src="~/images/gear_pulseline.png" alt="Tech" class="mr-2" style="width: 24px; height: 24px;" />
                    <span class="badge" style="background-color: #2e8687; color: white; padding: 0.5rem;">Hands-on</span>
                </div>
                <a href="#" class="pixel-btn">View Workshop</a>
            </div>
        </div>

        <!-- Course 3 -->
        <div class="pixel-card pixel-corner-frame">
            <div class="text-center">
                <img src="~/images/binoculars_leaf.png" alt="Exploration" class="pixel-card-icon" />
                <h4 class="pixel-card-title">Biogas Production</h4>
                <p class="pixel-card-text">Discover how to convert farm waste into biogas for energy production.</p>
                <div class="d-flex justify-content-center mb-3">
                    <img src="~/images/solar_scroll.png" alt="Course" class="mr-2" style="width: 24px; height: 24px;" />
                    <span class="badge" style="background-color: #2e8687; color: white; padding: 0.5rem;">Certificate Course</span>
                </div>
                <a href="#" class="pixel-btn">Enroll Now</a>
            </div>
        </div>
    </div>

    <!-- Webinars and Workshops -->
    <div class="pixel-divider"></div>

    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="pixel-border h-100">
                <div class="d-flex align-items-center mb-3">
                    <img src="~/images/binoculars_leaf.png" alt="Webinars" style="width: 48px; height: 48px; margin-right: 15px;" />
                    <h4 style="color: #2e8687; margin: 0;">Upcoming Webinars</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Wind Energy for Small Farms
                        <span class="badge" style="background-color: #2e8687; color: white;">May 25</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Solar Irrigation Systems
                        <span class="badge" style="background-color: #2e8687; color: white;">June 8</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Energy Storage Solutions
                        <span class="badge" style="background-color: #2e8687; color: white;">June 22</span>
                    </li>
                </ul>
                <div class="mt-3">
                    <a href="#" class="pixel-btn">Register for Webinars</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="pixel-border h-100">
                <div class="d-flex align-items-center mb-3">
                    <img src="~/images/gear_pulseline.png" alt="Workshops" style="width: 48px; height: 48px; margin-right: 15px;" />
                    <h4 style="color: #2e8687; margin: 0;">Technical Workshops</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Solar Panel Installation
                        <span class="badge" style="background-color: #2e8687; color: white;">2-Day Workshop</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Biogas Digester Setup
                        <span class="badge" style="background-color: #2e8687; color: white;">3-Day Workshop</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Renewable Energy Maintenance
                        <span class="badge" style="background-color: #2e8687; color: white;">1-Day Workshop</span>
                    </li>
                </ul>
                <div class="mt-3">
                    <a href="#" class="pixel-btn">View All Workshops</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Discovery Section -->
    <div class="pixel-divider"></div>

    <div class="pixel-border">
        <div class="d-flex align-items-center mb-3">
            <img src="~/images/binoculars_leaf.png" alt="Discovery" style="width: 48px; height: 48px; margin-right: 15px;" />
            <h4 style="color: #2e8687; margin: 0;">Explore Learning Paths</h4>
        </div>
        
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100" style="border: 2px solid #2e8687;">
                    <div class="card-header text-white" style="background-color: #2e8687;">
                        Beginner Path
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Renewable Energy Basics</h5>
                        <p class="card-text">Start your journey with fundamental concepts and principles of renewable energy in agriculture.</p>
                        <a href="#" class="pixel-btn btn-sm">Start Path</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100" style="border: 2px solid #2e8687;">
                    <div class="card-header text-white" style="background-color: #2e8687;">
                        Intermediate Path
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Implementation & Integration</h5>
                        <p class="card-text">Learn how to implement and integrate renewable energy systems on your farm.</p>
                        <a href="#" class="pixel-btn btn-sm">Start Path</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100" style="border: 2px solid #2e8687;">
                    <div class="card-header text-white" style="background-color: #2e8687;">
                        Advanced Path
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">System Optimization</h5>
                        <p class="card-text">Master advanced techniques for optimizing and expanding your renewable energy systems.</p>
                        <a href="#" class="pixel-btn btn-sm">Start Path</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
